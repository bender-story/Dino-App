<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="headerTextStyle">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textColor">@color/sec_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subHeaderTextStyle">
        <item name="android:textSize">@dimen/subHeaderText</item>
        <item name="android:textColor">@color/sec_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subHeaderTextBoldBlackStyle">
        <item name="android:textSize">@dimen/subHeaderText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleTextBoldStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tinyTextStyle">
        <item name="android:textSize">@dimen/tinyTextSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MaterialAlertDialog_OK_color" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle.textColor</item>
    </style>

    <style name="PositiveButtonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/sec_variant_color</item>
    </style>
</resources>